@page "/reviewcollection"
<PageTitle>Review Collection</PageTitle>
@rendermode InteractiveServer

@using BookSystem

<h3>Review Collection</h3>

<!--Success Area-->
@if (feedback.Length > 0)
{
    <div class="alert alert-info">
        <p>@feedback</p>
    </div>
}

<!--Errors Area-->
@if (errorMsgs.Count > 0)
{
    <div class="alert alert-danger">
        <p>Please fix the following issues:</p>
        @foreach(var error in errorMsgs)
        {
            <p>@error</p>
        }
    </div>
}

<!--Data Form Area-->
<fieldset class="row">
    <div class="col-2">

    </div>

    <div class="col-4">
        <h4>Books Details</h4>
        <div>
            <label>ISBN:</label>
            <input type="text" id="isbn" @bind="isbn"/>
        </div>
        <br/>
        <div>
            <label>Title:</label>
            <input type="text" id="title" @bind="title"/>
        </div>
        <br/>
        <div>
            <label>Select Author:</label>
            <select id="author" @bind="selectedAuthor">
                <option value="">Select an author...</option>
                @foreach (var item in authors)
                {
                    <option value="@item">@item</option>
                }
            </select>
        </div>
    </div>
    <div class="col-6">
        <h4>Review</h4>
        <div>
            <label>Reviewer:</label>
            <input type="text" id="reveiwer" @bind="reviewer" />
        </div>
        <br />
        <div>
            <label>Rating:</label>
            <select id="rating" @bind="rating">
                <option value="">Select a rating...</option>
                @foreach (var item in Enum.GetValues(typeof(RatingType)))
                {
                    <option value="@item">@item</option>
                }
            </select>
        </div>
        <br/>
        <div>
            <label>Comment:</label>
            <textarea id="comment" @bind="comment"></textarea>
        </div>
    </div>

    <div class="row">
        <div class="col text-center">
            <button type="submit" class="btn btn-primary rounded-pill" @onclick="OnCollect">
                Collect
            </button>
        </div>
        <div class="col text-center">
            <button class="btn btn-warning rounded-pill" @onclick="OnClearForm">
                Clear
            </button>
        </div>
        <div class="col text-center">
            <button class="btn btn-primary rounded-pill" @onclick="OnGoToReport">
                Reprot
            </button>
        </div>
    </div>
</fieldset>


